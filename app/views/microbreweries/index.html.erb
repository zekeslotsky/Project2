            <li>
                <h2>
                <strong> <%= m.name %> </strong> -- <%= m.direction %>
                </h2>
            </li>



           
        <% end %>
       <% end %>
    </ul>



    <%= link_to "Add a Microbrewery!", new_microbrewery_path %>
</div>
